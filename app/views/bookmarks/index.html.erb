<%= turbo_frame_tag "bookmark_posts-list" do %>

  <div class="container pt-3">
    <div class="row">
      <div class="col-12">
        <div class="row">
          <% if @bookmark_posts.present? %>
            <%= render @bookmark_posts %>
          <% else %>
            <p><%= t('.no_result') %></p>
          <% end %>
        </div>
      </div>
      <div class="d-flex justify-content-center pt-4">
        <%= paginate @bookmark_posts, theme: 'bootstrap-5' %>
      </div>
    </div>
  </div>
<% end %>