  <div class="col-sm-12 col-lg-4 mb-3">
      <div id="post-id-<%= post.id %>">
        <div class="card shadow" style="background-color: #ffffc2;">
          <h4 class="card-header" style="background-color: #ffffc2;">
              <%= link_to post.title, post_path(post) %>
          </h4>
          <div class="divider"></div>
            <ul class="list-inline">
              <li class="list-inline-item">
                <p>カテゴリ</p>
              </li>
              <% if post.category.present? %>
                <li class="list-inline-item">
                  <%= render partial: 'categories/category', locals: { post: post } %>
                </li>
              <% end %>
              <li class="list-inline-item">
                <p>投稿日時</p>
              </li>
              <li class="list-inline-item">
                <%= l post.created_at, format: :short %>
              </li>
            </ul>
            <% if post.image.attached? %>
              <%= link_to post_path(post) do %>
                <%= image_tag post.image.variant(resize_to_limit: [228, 228]) , class: 'card-img-top' %>
              <% end %>
            <% elsif post.embed_youtube? %>
              <div class="youtube">
                <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= "#{post.split_id_from_youtube_url}" %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
              </div>
            <% else %>
              <%= link_to post_path(post) do %>
                <%= image_tag "#{post.category.name}.png", class: 'card-img-top', size: '228x228' %>
              <% end %>
            <% end %>
          <div class="divider"></div>
          <div class="card-body">
         
            <h5 class="card-text"><%= simple_format(post.content.truncate(50)) %></h5>
          </div>
          <div class="card-footer">
            <ul class="list-inline">
              <li class="list-inline-item">
                <%= image_tag "icon/#{post.user.avatar}.png", size: '80x80' %>
              </li>
              <li class="list-inline-item">
                <p>投稿ユーザー</p>
                <h5><strong><%= post.user.name %></strong></h5>
              </li>
              <% if logged_in? %>
                <li class="list-inline-item">
                  <% if current_user.own?(post) %>
                    <%= render partial: 'posts/crud_menus',locals: { post: post } %>
                  <% else %>
                    <%= render 'actions/like_button', { post: post } %>
                    <%= render 'actions/bookmark_button', { post: post } %>
                  <% end %>
                </li>
              <% end %>
            </ul>
            <div>
              <%= render post.tags %>
              
                <%= link_to post_path(post), class: 'float-end', style:'text-decoration:none;'  do %>
                  <% if post.comments.present? %>
                    <i class="fa-regular fa-comment-dots fa-lg"></i> <%= post.comments.count %>
                  <% else %>
                    <i class="fa-regular fa-comment fa-lg"></i> <%= post.comments.count %>
                  <% end %>
                <% end %>                  
            </div>
          </div>
          
        </div>
      </div>
  </div> 