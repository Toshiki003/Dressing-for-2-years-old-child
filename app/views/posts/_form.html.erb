<%= form_with model: post, local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
    <%= f.fields_for :category do |i| %>
        <%= i.select :category_id, [["お風呂", 1], ["歯磨き", 2]], prompt: "カテゴリを選択してください", class: "form-control" %>
    <% end %>
    </div>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class:'form-control'%>
    </div>
    <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control', rows: 10 %>
    </div>
    <div class="form-group">
        <%= f.label :embed_youtube %>
        <%= f.text_field :embed_youtube, class: 'form-control' %>
    </div>
    <div class="mb-3">
        <%= f.label :tag_names %>
        <%= f.text_field :tag_names, class: 'form-control', placeholder: ',で区切って入力してください' %>
    </div>
    <div>
      <%= f.submit class: 'btn btn-primary' %>
    </div>
<% end %>  
<!-- form_with内にfields_forを用いてタグとカテゴリもsave, updateできる形に後で実装していく-->