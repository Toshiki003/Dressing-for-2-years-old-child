<%= turbo_frame_tag "post-list", data: { turbo_action: :advance } do %>
  <nav class="container pt-5 pb-5">
    <div class="container-fluid">
    <!-- 人気のタグ3つを表示 -->
      <div class="">
        <% @popular_tags.each do | tag |  %>
          <%= tag.name %>
        <% end %>
      </div>
      <!-- post一覧-->
      <div class="row">
        <div class="col-12">
          <div class="row">
            <% if @posts.present? %>
              <%= render @posts %>
            <% else %>
              <p><%= t('.no_result') %></p>
            <% end %> 
          </div> 
        </div>
      </div>

    </div>
    <div class="d-flex justify-content-center pt-4">
      <%= paginate @posts, theme: 'bootstrap-5' %>
    </div>
  </nav>
<% end %>